<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg"
    tools:context="singh.saurabh.iscfresnostate.view.AddNewBuySellPost"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6"
        android:background="@drawable/box_gradient"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:weightSum="1">

            <EditText
                android:id="@+id/buy_sell_title_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:typeface="serif"
                android:hint="Title"/>

            <EditText
                android:id="@+id/buy_sell_price_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:typeface="serif"
                android:hint="Price"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/buy_sell_location_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:typeface="serif"
                android:hint="Location"
                android:singleLine="true"
                android:inputType="textPostalAddress"/>

            <EditText
                android:id="@+id/buy_sell_tags_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:typeface="serif"
                android:hint="Tags (use “,” to separate)"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/buy_sell_contact_info_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:typeface="serif"
                android:hint="Contact number (optional)"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/buy_sell_description_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:imeActionId="@+id/action_add_buy_sell_post"
                android:imeActionLabel="@string/action_submit_post_short"
                android:imeOptions="actionDone"
                android:singleLine="false"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:typeface="serif"
                android:hint="Description"
                android:inputType="textMultiLine"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buy_sell_horizontalScrollView"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description_container"
                    android:gravity="center">
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/submit_buy_sell_post"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/custom_button_red"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="POST"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
