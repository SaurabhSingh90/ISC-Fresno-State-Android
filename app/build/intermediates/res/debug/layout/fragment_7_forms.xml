<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/form1_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/new_student_accommodation"
        android:textColor="@color/custom_title_blue_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/form2_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/pick_up"
        android:textColor="@color/custom_title_blue_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:clickable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/form3_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/accommodation_volunteering"
        android:textColor="@color/custom_title_blue_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:clickable="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray" />

</LinearLayout><!-- From: file:/Users/SinghSaab/Documents/Android%20Projects/ISCFresnoState/app/src/main/res/layout/fragment_7_forms.xml -->