<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                tools:context="singh.saurabh.iscfresnostate.view.SignUpActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView4"
        android:src="@drawable/isc_blur"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_gradient"
            android:id="@+id/sign_up_form"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textPersonName"
                android:ems="10"
                android:id="@+id/firstName_editText"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:hint="@string/firstName"
                android:textColorHint="@android:color/darker_gray" >
                <requestFocus />
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textPersonName"
                android:ems="10"
                android:id="@+id/lastName_editText"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:hint="@string/lastName"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/sign_up_email_editText"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:hint="@string/sign_up_email"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/sign_up_password_editText"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:hint="@string/sign_up_password"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/confirm_sign_up_password_editText"
                android:imeActionLabel="@string/action_sign_up_short"
                android:imeActionId="@+id/action_signUp"
                android:imeOptions="actionUnspecified"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:hint="@string/sign_up_confirm_password"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_sign_up"
                android:id="@+id/sign_up_button"
                android:textStyle="bold"
                android:typeface="serif"
                android:background="@color/custom_button_red"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                style="?android:textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
