<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="singh.saurabh.iscfresnostate.view.JobDescription"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/singleJobPost_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold|normal"
            android:typeface="serif"
            android:text="--"
            android:padding="5dp"
            android:textColor="@color/custom_title_blue_color"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/singleJobPost_location_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold|normal"
            android:typeface="serif"
            android:text="--"
            android:padding="5dp"
            android:textColor="@color/custom_author_name_red_color"
            android:textIsSelectable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singleJobPost_firstName_textView"
            android:typeface="serif"
            android:textStyle="normal"
            android:text="--"
            android:padding="5dp"
            android:textColor="#e3590303"
            android:textIsSelectable="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singleJobPost_date_textView"
            android:typeface="serif"
            android:textStyle="normal"
            android:text="--"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singleJobPost_tag_textView"
            android:textStyle="normal"
            android:typeface="serif"
            android:text="--"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Job Description:"
            android:id="@+id/textView15"
            android:typeface="serif"
            android:textIsSelectable="true"
            android:textStyle="normal"
            android:padding="5dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="--"
                android:id="@+id/singleJobPost_content_textView"
                android:typeface="serif"
                android:textIsSelectable="true"
                android:textStyle="normal"
                android:padding="5dp"/>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
