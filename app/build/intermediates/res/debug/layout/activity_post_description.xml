<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="singh.saurabh.iscfresnostate.view.PostDescription"
    android:orientation="vertical"
    android:background="@drawable/list_bg">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/singlePost_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold|normal"
            android:typeface="serif"
            android:text="--"
            android:padding="5dp"
            android:textColor="#FF100D54"
            android:textIsSelectable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singlePost_firstName_textView"
            android:typeface="serif"
            android:textStyle="normal"
            android:text="--"
            android:padding="5dp"
            android:textColor="@color/custom_author_name_red_color"
            android:textIsSelectable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singlePost_date_textView"
            android:typeface="serif"
            android:textStyle="normal"
            android:text="--"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singlePost_tag_textView"
            android:textStyle="normal"
            android:typeface="serif"
            android:text="--"
            android:padding="5dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_for_replies"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>
