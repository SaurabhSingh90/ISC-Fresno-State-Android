<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/list_bg"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Flight and Immigration"
                    android:id="@+id/textView"
                    android:textColor="@color/custom_title_blue_color"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="There is no direct flight to Fresno. For entry into the US you have to clear your immigration at the port of entry, which would be one of the many major international airports of the US. Students usually choose San Francisco or Los Angeles as their port of entry. \nWe suggest you to contact your travel agent and be aware of the requirements of the same."
                    android:id="@+id/textView7"
                    android:typeface="serif"
                    android:textIsSelectable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Have been admitted to Fresno State?"
                    android:id="@+id/textView2"
                    android:textColor="@color/custom_title_blue_color"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Let us know a week before your arrival, and we assure you that a pick up will assigned for you from the airport"
                    android:id="@+id/textView8"
                    android:typeface="serif"
                    android:textIsSelectable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Temporary accommodation"
                    android:id="@+id/textView3"
                    android:textColor="@color/custom_title_blue_color"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Temporary accommodation will be arranged prior to your arrival in Fresno. \nYou will be assigned a temporary accommodation with Indian students who are currently enrolled at Fresno State. Accommodation provided will be close to the college campus. \nP.S. Keeping in mind the convenience of your host, it is strongly advised that you find an housing of your own as fast as possible, preferably within 3-4 days of your arrival."
                    android:id="@+id/textView9"
                    android:typeface="serif"
                    android:textIsSelectable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Apartment Options"
                    android:id="@+id/textView4"
                    android:textColor="@color/custom_title_blue_color"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="There are various apartment options for students in Fresno, like: \n\n Parkwood Apartments: 4918 N 9th St, Fresno, CA 93726. Contact: (559)255-3377. \nMore information: www.parkwoodapts.info \n\n Northpark Apartments: 4890 N Backer Ave, Fresno, CA 93726. Contact: (559)291-0671.\n More information: http://www.apartments.com/north-park-apartments-fresno-ca/8446yt2/  \n\nPalazzo Apartments: 5164 N Primitivo Way, Fresno, CA 93710. Contact:(559)291-6400. \nMore information: http://www.palazzofresno.com  \n\nPlaza Apartments: 5469 N Cedar Ave, Fresno, CA. Contact:(559)431-8122. \nMore information: http://www.plazaapts.info  \n\nBulldog Village: 5151 N Cedar Ave, Fresno, CA 93710. Contact:(559)229-7001. \nMore information: http://www.bulldogvillage.com/  \n\nCampus Edge: 1577 Bulldog Ln, Fresno, CA 93710. Contact:(559)226-7383. \nMore information: http://www.campusedgefresno.com/  \n\nCedar Spring Apartments:  4835 N Cedar Ave, Fresno, CA 93726 Contact : (559) 225-3535 . \nMore information: http://www.apartments.com/cedar-springs-fresno-ca/bywvk1b/"
                    android:id="@+id/textView10"
                    android:typeface="serif"
                    android:textIsSelectable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Class Registration"
                    android:id="@+id/textView5"
                    android:textColor="@color/custom_title_blue_color"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Detailed information regarding the college and classes is given during International Student Orientation. \nYou may register for your classes only after the orientation"
                    android:id="@+id/textView11"
                    android:typeface="serif"
                    android:textIsSelectable="true"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Opening bank account"
                    android:id="@+id/textView6"
                    android:textColor="@color/custom_title_blue_color"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="It is a good idea after coming here; to immediately open a bank account. \nStudents generally prefer:\n\t1. Bank of America\n\t2. Chase Bank \n\t3. Citi Bank \nTo open an account, you would require your passport and valid I-20."
                    android:id="@+id/textView12"
                    android:typeface="serif"
                    android:textIsSelectable="true"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/Users/SinghSaab/Documents/Android%20Projects/ISCFresnoState/app/src/main/res/layout/fragment_9_faq.xml -->