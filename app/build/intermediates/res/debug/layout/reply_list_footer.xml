<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout_container_for_replyButton"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_reply"
            android:imeActionId="@+id/submitReply"
            android:imeActionLabel="@string/reply_text"
            android:imeOptions="actionGo"
            android:hint="@string/type_in_your_reply"
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:singleLine="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reply_text"
            android:id="@+id/reply_button"
            android:background="#e3960606"
            android:textColor="@android:color/background_light"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:clickable="true"
            android:onClick="AddReply"
            android:typeface="serif" />
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/saurabhsingh/Documents/ISC%20Fresno%20State/app/src/main/res/layout/reply_list_footer.xml -->